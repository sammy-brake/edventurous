
<div class="no">
<h1>Sign in!</h1>
<br>

<%= form_for @user do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit "Sign In" %> 
<% end %>
<br>
<%= link_to('Sign in with Facebook', '/auth/facebook', class: "rootbtn") %>
<br>
<br>
</div>



